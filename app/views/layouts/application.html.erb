<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c3574ee77e.js" crossorigin="anonymous"></script>
  </head>

  <body>
    
    <header>
      
      <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand text-light" href="#">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="menu" class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="" class="nav-link text-light">
                <i class="fas fa-home-lg text-light"></i>
                Home
              </a>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Users", users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "Books", books_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
          <% else %>
            <li class="nav-item">
              <a href="home/about" class="nav-link text-light">About</a>
            </li>
            <li class="nav-item">
              <%= link_to "signup", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "login", new_user_session_path, class: 'nav-link text-light' %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
      </nav>
    </header>
    
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
   <p class="alert"><%= alert %></p>
    

    
    <%= yield %>
    
  <footer><p>CopyRight Inflatop.Inc</p></footer>
  </body>
</html>
