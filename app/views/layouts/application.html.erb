<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c3574ee77e.js" crossorigin="anonymous"></script>
  </head>

  <body>
    
    <header>
      
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to root_path, class: 'navbar-brand' do %>
         <span class="text-light">Bookers</span>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="menu" class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to current_user.name, user_path(current_user), class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
              <i class="fas fa-home text-light pr-2"></i>Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-users text-light pr-2"></i>Users
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path, class: 'nav-link text-light' do %>
              <i class="fas fa-book-open text-light pr-2"></i>Books
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt text-light pr-2"></i>logout
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-light' do %>
              <i class="fas fa-home text-light pr-2"></i>Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to home_about_path, class: 'nav-link text-light' do %>
              <i class="fas fa-link text-light pr-2"></i>About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus text-light pr-2"></i>sign up
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt text-light pr-2"></i>login
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
      </nav>
    </header>
    
    
    <% if flash[:notice] %>
      <div class="flash">
        <p class="text-success">
        <%= flash[:notice] %>
        </p>
      </div>
    <% end %>
    
 <main class="m-3">
    <%= yield %>
 </main>
    
  <footer class="text-center mt-4"><p>CopyRight Inflatop.Inc</p></footer>
  </body>
</html>
