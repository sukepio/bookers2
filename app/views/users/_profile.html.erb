<!--プロフィールここから-->
<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <th>name</th>
      <th><%= user.name %></th>
    </tbody>
    <tbody>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.follower.count, follows_user_path(user) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followed.count, followers_user_path(user) %></th>
      </tr>
    </tbody>
  </table>
  <% unless current_user == user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", unfollow_path(user), method: :post, class:"btn btn-info" %>
    <% else %>
      <%= link_to " フォローする", follow_path(user), method: :post, class:"btn btn-info" %>
    <% end %>
  <% end %>
</div>
<!--プロフィールここまで-->

<!--プロフィール編集ここから-->
<div class="profile-edit my-3">
    <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block btn-sm" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
</div>
<!--プロフィール編集-->

