<div class="profile-contianer">
  <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
</div>

<div class="profile-edit">
  <% if @user.id ==current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<div class="new-book">
    <%= form_with model: @book, local: true do |f| %>
      <p>Title</p><%= f.text_field :title %>
      <p>Opinion</p><%= f.text_area :body %>
        <%= f.submit "送信する" %>
    <% end %>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <% if @user.id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
    <% end %>
  </tr>
  <% end %>
</table>