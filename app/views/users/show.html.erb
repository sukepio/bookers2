
<div class="container">
  <div class="row">
    <%= render 'layouts/notification', book: @book %>
  </div>
  
  <div class="row">
    
    <div class="col-md-3 mr-5">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
    </div>
    
  </div>
</div>