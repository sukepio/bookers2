<%= render 'users/profile', user: @user %>
<%= render 'books/newbook', book: @book %>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.user.name %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", user_path(book.user_id) %></td>
  </tr>
  <% end %>
</table>