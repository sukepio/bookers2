<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Image</th>
          <th>name</th>
          <th></th>
        </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.follower.count %></td>
            <td>フォロワー数: <%= user.followed.count %></td>
            <% unless current_user == user %>
            <% if current_user.following?(user) %>
            <td>
              <%= link_to 'フォローを外す', unfollow_path(user), method: :post %>
            </td>  
            <% else %>
            <td>
              <%= link_to 'フォローする', follow_path(user), method: :post %>
            </td>  
            <% end %>
            <% end %>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    
  </div>
</div>
