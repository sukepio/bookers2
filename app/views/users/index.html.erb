<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3 mr-5">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
        <tr>
          <th>Image</th>
          <th>name</th>
          <th></th>
        </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= book.user.name %></td>
            <td><%= link_to "Show", user_path(book.user_id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    
  </div>
</div>
