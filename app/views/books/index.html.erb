<h2>User info</h2>
<div class="profile-contianer">
  <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
</div>

<div class="profile-edit">
  <% if @user.id ==current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h2>New book</h2>
<div class="new-book">
    <%= form_with model: @book, local: true do |f| %>
      <p>Title</p><%= f.text_field :title %>
      <p>Opinion</p><%= f.text_area :body %>
        <%= f.submit "送信する" %>
    <% end %>
</div>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>