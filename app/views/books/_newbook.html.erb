<h2>New book</h2>
<div class="new-book">
    <%= form_with model: book, local: true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, id:"inputTitle", class:"form-controll mb-3" %>
      <label for="inputOpinion">Opinion</label>
      <%= f.text_area :body, id:"inputOpinion", class:"form-controll mb-3" %>
      <%= f.submit "Create Book", class:"btn btn-success" %>
    <% end %>
</div>